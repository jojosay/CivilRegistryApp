<UserControl x:Class="CivilRegistryApp.Modules.Requests.Views.RequestsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Requests.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource PrimaryBrush}">
    <Grid Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Request Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10,10,10,20"
                   Foreground="White"/>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                     Grid.Column="0"
                     Padding="5"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown">
                <TextBox.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Style.Resources>
                            <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search by requestor name, purpose, or document ID..." />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Search Button -->
            <Button x:Name="SearchButton"
                    Grid.Column="1"
                    Content="Search"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="SearchButton_Click"/>

            <!-- Status Filter Dropdown -->
            <ComboBox x:Name="StatusComboBox"
                      Grid.Column="2"
                      Width="150"
                      Padding="5"
                      Margin="0,0,10,0"
                      SelectionChanged="StatusComboBox_SelectionChanged">
                <ComboBoxItem Content="All Requests" IsSelected="True"/>
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Approved"/>
                <ComboBoxItem Content="Rejected"/>
                <ComboBoxItem Content="Completed"/>
            </ComboBox>

            <!-- Add Request Button -->
            <Button x:Name="AddRequestButton"
                    Grid.Column="3"
                    Content="New Request"
                    Padding="10,5"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="AddRequestButton_Click"/>
        </Grid>

        <!-- Requests List -->
        <DataGrid x:Name="RequestsDataGrid"
                  Grid.Row="2"
                  Margin="10,0,10,10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="RequestsDataGrid_SelectionChanged"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  AlternatingRowBackground="{StaticResource PrimaryDarkBrush}"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  RowHeaderWidth="0"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RequestId}" Width="50"/>
                <DataGridTextColumn Header="Requestor Name" Binding="{Binding RequestorName}" Width="150"/>
                <DataGridTextColumn Header="Document ID" Binding="{Binding RelatedDocumentId}" Width="80"/>
                <DataGridTextColumn Header="Document Type" Binding="{Binding RelatedDocument.DocumentType}" Width="120"/>
                <DataGridTextColumn Header="Purpose" Binding="{Binding Purpose}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Request Date" Binding="{Binding RequestDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>
                <DataGridTextColumn Header="Handled By" Binding="{Binding HandledByUser.FullName}" Width="120"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="View"
                                        Margin="2"
                                        Padding="8,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        Click="ViewButton_Click"/>
                                <Button Content="Process"
                                        Margin="2"
                                        Padding="8,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        Click="ProcessButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button x:Name="PreviousPageButton"
                    Content="Previous"
                    Padding="10,5"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="PreviousPageButton_Click"/>
            <TextBlock x:Name="PageInfoTextBlock"
                       Text="Page 1 of 1"
                       VerticalAlignment="Center"
                       Margin="10,0"
                       Foreground="White"/>
            <Button x:Name="NextPageButton"
                    Content="Next"
                    Padding="10,5"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="NextPageButton_Click"/>
        </StackPanel>
    </Grid>


</UserControl>
