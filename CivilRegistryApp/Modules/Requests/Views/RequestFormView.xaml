<UserControl x:Class="CivilRegistryApp.Modules.Requests.Views.RequestFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Requests.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="New Document Request" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"/>
        
        <!-- Request Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,10">
            <StackPanel>
                <!-- Document Selection -->
                <GroupBox Header="Document Information" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Document ID:" Margin="0,5,10,5"/>
                        <TextBox x:Name="DocumentIdTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="0,5,10,5" 
                                 Padding="5"
                                 VerticalContentAlignment="Center"/>
                        <Button x:Name="SearchDocumentButton" 
                                Grid.Row="0" Grid.Column="2" 
                                Content="Search" 
                                Padding="10,5" 
                                Margin="0,5,0,5"
                                Click="SearchDocumentButton_Click"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Document Type:" Margin="0,5,10,5"/>
                        <TextBox x:Name="DocumentTypeTextBox" 
                                 Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="Certificate Number:" Margin="0,5,10,5"/>
                        <TextBox x:Name="CertificateNumberTextBox" 
                                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 IsReadOnly="True"
                                 VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>
                
                <!-- Requestor Information -->
                <GroupBox Header="Requestor Information" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Full Name:" Margin="0,5,10,5"/>
                        <TextBox x:Name="RequestorNameTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 VerticalContentAlignment="Center"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Address:" Margin="0,5,10,5"/>
                        <TextBox x:Name="RequestorAddressTextBox" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 VerticalScrollBarVisibility="Auto"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="Contact Number:" Margin="0,5,10,5"/>
                        <TextBox x:Name="RequestorContactTextBox" 
                                 Grid.Row="2" Grid.Column="1" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 VerticalContentAlignment="Center"/>
                    </Grid>
                </GroupBox>
                
                <!-- Request Details -->
                <GroupBox Header="Request Details" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Purpose:" Margin="0,5,10,5"/>
                        <TextBox x:Name="PurposeTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="0,5,0,5" 
                                 Padding="5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="20,0,20,20">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SubmitButton" 
                    Content="Submit Request" 
                    Padding="15,5"
                    Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
