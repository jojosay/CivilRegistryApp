<UserControl x:Class="CivilRegistryApp.Modules.Requests.Views.RequestDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Requests.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock x:Name="RequestTitleTextBlock"
                       Text="Request Details"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="RequestSubtitleTextBlock"
                       Text="Request ID: "
                       FontSize="16"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="StatusTextBlock"
                       Text="Status: Pending"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="Blue"
                       Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Request Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <GroupBox Header="Requestor Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RequestorNameTextBlock" Grid.Row="0" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Address:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RequestorAddressTextBlock" Grid.Row="1" Grid.Column="1" Text="" Margin="0,5,0,5" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Contact:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RequestorContactTextBlock" Grid.Row="2" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Purpose:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="PurposeTextBlock" Grid.Row="3" Grid.Column="1" Text="" Margin="0,5,0,5" TextWrapping="Wrap"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Request Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Request Date:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RequestDateTextBlock" Grid.Row="0" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Handled By:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="HandledByTextBlock" Grid.Row="1" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RequestStatusTextBlock" Grid.Row="2" Grid.Column="1" Text="" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <GroupBox Header="Related Document Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Document ID:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="DocumentIdTextBlock" Grid.Row="0" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Document Type:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="DocumentTypeTextBlock" Grid.Row="1" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Certificate No:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="CertificateNumberTextBlock" Grid.Row="2" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Name on Document:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="DocumentNameTextBlock" Grid.Row="3" Grid.Column="1" Text="" Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Registry Office:" FontWeight="Bold" Margin="0,5,10,5"/>
                            <TextBlock x:Name="RegistryOfficeTextBlock" Grid.Row="4" Grid.Column="1" Text="" Margin="0,5,0,5"/>
                        </Grid>
                    </GroupBox>

                    <!-- Request Processing Section (visible only in processing mode) -->
                    <GroupBox x:Name="ProcessingGroupBox" Header="Process Request" Margin="0,0,0,10" Padding="10" Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Update Request Status:" FontWeight="Bold" Margin="0,5,0,5"/>

                            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,10">
                                <RadioButton x:Name="ApproveRadioButton" Content="Approve Request" Margin="0,5,0,5" GroupName="StatusGroup"/>
                                <RadioButton x:Name="RejectRadioButton" Content="Reject Request" Margin="0,5,0,5" GroupName="StatusGroup"/>
                                <RadioButton x:Name="CompleteRadioButton" Content="Mark as Completed" Margin="0,5,0,5" GroupName="StatusGroup"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="Note: Updating the status cannot be undone." Margin="0,10,0,0" FontStyle="Italic"/>
                        </Grid>
                    </GroupBox>

                    <!-- Document Preview -->
                    <GroupBox Header="Document Preview" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                     Text="Click the button below to view the document in a popup window with zoom and rotation options."
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,10"
                                     FontStyle="Italic"/>

                            <Button x:Name="ViewDocumentButton"
                                    Content="View Document in Popup Window"
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    Padding="10,5"
                                    Margin="0,0,0,10"
                                    Click="ViewDocumentButton_Click"/>

                            <Image x:Name="DocumentPreviewImage"
                                   Grid.Row="2"
                                   Stretch="Uniform"
                                   MaxHeight="150"
                                   Source="{Binding DocumentImageSource}"
                                   ToolTip="This is a thumbnail preview. Click 'View Document in Popup Window' for a better view."/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20,0,20,20">
            <Button x:Name="CloseButton"
                    Content="Close"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="CloseButton_Click"/>
            <Button x:Name="UpdateStatusButton"
                    Content="Update Status"
                    Padding="15,5"
                    Visibility="Collapsed"
                    Click="UpdateStatusButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
