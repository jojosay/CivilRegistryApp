<Window x:Class="CivilRegistryApp.Modules.Admin.Views.DatabaseUtilityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivilRegistryApp.Modules.Admin.Views"
        mc:Ignorable="d"
        Title="Database Utility" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBrush}">
    <Grid Margin="20" Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Database Maintenance Utility"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="White"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <GroupBox Header="Document Data Management" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Use this utility to clear all document data from the database. This action cannot be undone."
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               Foreground="White"/>

                    <Button x:Name="ClearDocumentDataButton"
                            Content="Clear All Document Data"
                            Padding="10,5"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            Click="ClearDocumentDataButton_Click"/>

                    <TextBlock x:Name="StatusTextBlock"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"
                               Foreground="White"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <Button Grid.Row="2"
                Content="Close"
                HorizontalAlignment="Right"
                Padding="20,5"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
