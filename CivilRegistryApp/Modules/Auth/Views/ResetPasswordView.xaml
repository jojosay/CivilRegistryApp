<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.ResetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Reset Password" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Password Fields -->
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="UserInfoTextBlock" 
                       Text="Resetting password for: " 
                       Margin="0,0,0,15"/>
            
            <!-- New Password -->
            <TextBlock Text="New Password:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" 
                         Padding="5" 
                         Margin="0,0,0,5"
                         PasswordChanged="NewPasswordBox_PasswordChanged"/>
            <TextBlock x:Name="PasswordStrengthText" 
                       Text="Password strength: Not entered" 
                       Margin="0,0,0,15"/>
            
            <!-- Confirm New Password -->
            <TextBlock Text="Confirm New Password:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Padding="5" 
                         Margin="0,0,0,5"
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            <TextBlock x:Name="PasswordMatchText" 
                       Foreground="Red" 
                       Visibility="Collapsed" 
                       Text="Passwords do not match" 
                       Margin="0,0,0,15"/>
            
            <!-- Generate Random Password -->
            <CheckBox x:Name="GenerateRandomPasswordCheckBox" 
                      Content="Generate random password" 
                      Margin="0,10,0,5"
                      Checked="GenerateRandomPasswordCheckBox_Checked"
                      Unchecked="GenerateRandomPasswordCheckBox_Unchecked"/>
            <TextBlock x:Name="GeneratedPasswordTextBlock" 
                       Visibility="Collapsed" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="ResetButton" 
                    Content="Reset Password" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="ResetButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Padding="15,5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
