<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.UserAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Add New User" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10"/>
        
        <!-- User Information Form -->
        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username:" 
                           FontWeight="Bold" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Password -->
                <TextBlock Text="Password:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Padding="5" 
                             Margin="0,0,0,5"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordStrengthText" 
                           Text="Password strength: Not entered" 
                           Margin="0,0,0,10"/>
                
                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Padding="5" 
                             Margin="0,0,0,5"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordMatchText" 
                           Foreground="Red" 
                           Visibility="Collapsed" 
                           Text="Passwords do not match" 
                           Margin="0,0,0,10"/>
                
                <!-- Full Name -->
                <TextBlock Text="Full Name:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Email -->
                <TextBlock Text="Email:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Phone Number -->
                <TextBlock Text="Phone Number:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneNumberTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Department -->
                <TextBlock Text="Department:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="DepartmentTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Position -->
                <TextBlock Text="Position:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PositionTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Role -->
                <TextBlock Text="Role:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="RoleComboBox" 
                          Padding="5" 
                          Margin="0,0,0,10">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Staff" IsSelected="True"/>
                    <ComboBoxItem Content="Clerk"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Padding="15,5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
