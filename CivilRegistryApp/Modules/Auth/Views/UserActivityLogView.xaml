<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.UserActivityLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Controls"
             xmlns:views="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <!-- No local resources needed as we're using the global styles -->
    <Grid Background="{DynamicResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="User Activity Log"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="10"/>

        <!-- Search and Filter Panel -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Row -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="SearchTextBox"
                         Grid.Column="0"
                         Padding="5"
                         Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         KeyDown="SearchTextBox_KeyDown">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type TextBox}">
                            <Style.Resources>
                                <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="Search by username or description..." />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background" Value="{StaticResource HintBrush}" />
                                </Trigger>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource HintBrush}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Search Button -->
                <Button x:Name="SearchButton"
                        Grid.Column="1"
                        Content="Search"
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Background="{StaticResource PrimaryDarkBrush}"
                        Foreground="White"
                        Click="SearchButton_Click"/>

                <!-- Activity Type Filter -->
                <ComboBox x:Name="ActivityTypeComboBox"
                          Grid.Column="2"
                          Width="150"
                          Padding="5"
                          Background="{StaticResource PrimaryDarkBrush}"
                          Foreground="White"
                          SelectionChanged="ActivityTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Activities" IsSelected="True"/>
                </ComboBox>
            </Grid>

            <!-- Bottom Row -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range -->
                <TextBlock Grid.Column="0"
                           Text="Date Range:"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,10,0"/>

                <local:CustomDatePicker x:Name="StartDatePicker"
                            Grid.Column="1"
                            Width="120"
                            Margin="0,0,5,0"
                            Hint="Start Date"
                            DateChanged="DatePicker_SelectedDateChanged"/>

                <TextBlock Grid.Column="2"
                           Text="to"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,5,0"/>

                <local:CustomDatePicker x:Name="EndDatePicker"
                            Grid.Column="3"
                            Width="120"
                            Margin="0,0,10,0"
                            Hint="End Date"
                            DateChanged="DatePicker_SelectedDateChanged"/>

                <!-- User Filter -->
                <ComboBox x:Name="UserFilterComboBox"
                          Grid.Column="5"
                          Width="150"
                          Padding="5"
                          Background="{StaticResource PrimaryDarkBrush}"
                          Foreground="White"
                          SelectionChanged="UserFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Users" IsSelected="True"/>
                </ComboBox>
            </Grid>
        </Grid>

        <!-- Activity Log -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <TextBlock x:Name="NoDataTextBlock"
                       Text="No activity logs found for the selected criteria."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       Visibility="Collapsed"/>

            <ProgressBar x:Name="LoadingIndicator"
                         IsIndeterminate="True"
                         Width="200"
                         Height="20"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Visibility="Visible"/>

            <DataGrid x:Name="ActivityLogDataGrid"
                      Visibility="Collapsed"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserSortColumns="True"
                      Background="{StaticResource PrimaryBrush}"
                      AlternatingRowBackground="{StaticResource PrimaryDarkBrush}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      Foreground="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ActivityId}" Width="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat=\{0:MM/dd/yyyy HH:mm:ss\}}" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="User" Binding="{Binding User.Username}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Activity Type" Binding="{Binding ActivityType}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button x:Name="FirstPageButton"
                    Content="&lt;&lt;"
                    Width="40"
                    Margin="5,0"
                    Background="{StaticResource PrimaryDarkBrush}"
                    Foreground="White"
                    Click="FirstPageButton_Click"/>
            <Button x:Name="PreviousPageButton"
                    Content="&lt;"
                    Width="40"
                    Margin="5,0"
                    Background="{StaticResource PrimaryDarkBrush}"
                    Foreground="White"
                    Click="PreviousPageButton_Click"/>
            <TextBlock x:Name="PaginationInfoTextBlock"
                       Text="Page 1 of 1"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10,0"/>
            <Button x:Name="NextPageButton"
                    Content="&gt;"
                    Width="40"
                    Margin="5,0"
                    Background="{StaticResource PrimaryDarkBrush}"
                    Foreground="White"
                    Click="NextPageButton_Click"/>
            <Button x:Name="LastPageButton"
                    Content="&gt;&gt;"
                    Width="40"
                    Margin="5,0"
                    Background="{StaticResource PrimaryDarkBrush}"
                    Foreground="White"
                    Click="LastPageButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
