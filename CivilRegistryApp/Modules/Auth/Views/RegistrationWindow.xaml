<Window x:Class="CivilRegistryApp.Modules.Auth.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
        mc:Ignorable="d"
        Title="Register New User - Civil Registry Archiving System" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="20">
            <TextBlock x:Name="HeaderTextBlock"
                       Text="Register New User"
                       FontSize="20"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Registration Form -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="40" VerticalAlignment="Center">
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="White"/>
                <TextBox x:Name="UsernameTextBox" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Full Name" Margin="0,0,0,5" Foreground="White"/>
                <TextBox x:Name="FullNameTextBox" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Password" Margin="0,0,0,5" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Confirm Password" Margin="0,0,0,5" Foreground="White"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Role" Margin="0,0,0,5" Foreground="White"/>
                <ComboBox x:Name="RoleComboBox" Padding="10,5" Margin="0,0,0,25">
                    <ComboBoxItem Content="Admin" IsSelected="True"/>
                    <ComboBoxItem Content="Staff"/>
                    <ComboBoxItem Content="Clerk"/>
                </ComboBox>

                <Button x:Name="RegisterButton"
                        Content="Register"
                        Padding="10,5"
                        Background="#2E3A59"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        MinWidth="100"
                        Click="RegisterButton_Click"/>

                <TextBlock x:Name="ErrorMessageTextBlock"
                           Foreground="White"
                           Background="#D32F2F"
                           Padding="5"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,15,0,0"
                           Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2E3A59" Padding="10">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Padding="10,5"
                    Background="#2E3A59"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="CancelButton_Click"/>
        </Border>
    </Grid>
</Window>
