<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="My Profile" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10"/>
        
        <!-- Profile Picture -->
        <Border Grid.Row="1" 
                Width="150" 
                Height="150" 
                Margin="10" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                HorizontalAlignment="Center">
            <Grid>
                <Image x:Name="ProfileImage" 
                       Stretch="UniformToFill"/>
                <Button x:Name="ChangeProfilePictureButton" 
                        Content="Change Picture" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Center" 
                        Margin="5"
                        Click="ChangeProfilePictureButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Profile Information -->
        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username:" 
                           FontWeight="Bold" 
                           Margin="0,10,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         IsReadOnly="True" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Full Name -->
                <TextBlock Text="Full Name:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Email -->
                <TextBlock Text="Email:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Phone Number -->
                <TextBlock Text="Phone Number:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneNumberTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Department -->
                <TextBlock Text="Department:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="DepartmentTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Position -->
                <TextBlock Text="Position:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PositionTextBox" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Role -->
                <TextBlock Text="Role:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="RoleTextBox" 
                         IsReadOnly="True" 
                         Padding="5" 
                         Margin="0,0,0,10"/>
                
                <!-- Account Information -->
                <GroupBox Header="Account Information" Margin="0,10,0,10" Padding="5">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Created At:" 
                                           FontWeight="Bold" 
                                           Margin="0,5,0,5"/>
                                <TextBox x:Name="CreatedAtTextBox" 
                                         IsReadOnly="True" 
                                         Padding="5" 
                                         Margin="0,0,10,10"/>
                                
                                <TextBlock Text="Last Login:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="LastLoginTextBox" 
                                         IsReadOnly="True" 
                                         Padding="5" 
                                         Margin="0,0,10,10"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Last Password Change:" 
                                           FontWeight="Bold" 
                                           Margin="0,5,0,5"/>
                                <TextBox x:Name="LastPasswordChangeTextBox" 
                                         IsReadOnly="True" 
                                         Padding="5" 
                                         Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Account Status:" 
                                           FontWeight="Bold" 
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="AccountStatusTextBox" 
                                         IsReadOnly="True" 
                                         Padding="5" 
                                         Margin="0,0,0,10"/>
                            </StackPanel>
                        </Grid>
                        
                        <Button x:Name="ChangePasswordButton" 
                                Content="Change Password" 
                                HorizontalAlignment="Right" 
                                Padding="10,5" 
                                Margin="0,5,0,0"
                                Click="ChangePasswordButton_Click"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10">
            <Button x:Name="SaveButton" 
                    Content="Save Changes" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Padding="15,5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
