<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="User Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10"/>

        <!-- Search and Filter Panel -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                     Grid.Column="0"
                     Padding="5"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown">
                <TextBox.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Style.Resources>
                            <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search by username, name, email, department..." />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Search Button -->
            <Button x:Name="SearchButton"
                    Grid.Column="1"
                    Content="Search"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="SearchButton_Click"/>

            <!-- Role Filter Dropdown -->
            <ComboBox x:Name="RoleFilterComboBox"
                      Grid.Column="2"
                      Width="150"
                      Padding="5"
                      Margin="0,0,10,0"
                      SelectionChanged="RoleFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="All Roles" IsSelected="True"/>
            </ComboBox>

            <!-- Add New User Button -->
            <Button x:Name="AddUserButton"
                    Grid.Column="3"
                    Content="Add New User"
                    Padding="10,5"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="AddUserButton_Click"/>
        </Grid>

        <!-- Users List -->
        <DataGrid x:Name="UsersDataGrid"
                  Grid.Row="2"
                  Margin="10,0,10,10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="UsersDataGrid_SelectionChanged"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  AlternatingRowBackground="#F5F5F5"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  RowHeaderWidth="0"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Role" Binding="{Binding RoleDisplay}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, StringFormat=\{0:MM/dd/yyyy\}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToActiveStatusConverter}}"
                                       Foreground="{Binding IsActive, Converter={StaticResource BoolToStatusColorConverter}}"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Actions" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit"
                                        Margin="2"
                                        Padding="5,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        Click="EditUserButton_Click"/>
                                <Button Content="Reset Password"
                                        Margin="2"
                                        Padding="5,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        Click="ResetPasswordButton_Click"/>
                                <Button Content="{Binding IsActive, Converter={StaticResource BoolToActivationButtonTextConverter}}"
                                        Margin="2"
                                        Padding="5,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        Click="ToggleActivationButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button x:Name="FirstPageButton"
                    Content="&lt;&lt;"
                    Width="40"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="FirstPageButton_Click"/>
            <Button x:Name="PreviousPageButton"
                    Content="&lt;"
                    Width="40"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="PreviousPageButton_Click"/>
            <TextBlock x:Name="PaginationInfoTextBlock"
                       Text="Page 1 of 1"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
            <Button x:Name="NextPageButton"
                    Content="&gt;"
                    Width="40"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="NextPageButton_Click"/>
            <Button x:Name="LastPageButton"
                    Content="&gt;&gt;"
                    Width="40"
                    Margin="5,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="LastPageButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
