<Window x:Class="CivilRegistryApp.Modules.Auth.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
        mc:Ignorable="d"
        Title="Login - Civil Registry Archiving System" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="20">
            <TextBlock Text="Login to Civil Registry Archiving System"
                       FontSize="20"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="40" VerticalAlignment="Center">
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="White"/>
                <TextBox x:Name="UsernameTextBox" Padding="10,5" Margin="0,0,0,15"/>

                <TextBlock Text="Password" Margin="0,0,0,5" Foreground="White"/>
                <PasswordBox x:Name="PasswordBox" Padding="10,5" Margin="0,0,0,25"/>

                <Button x:Name="LoginButton"
                        Content="Login"
                        Padding="10,5"
                        Background="#2E3A59"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        MinWidth="100"
                        Click="LoginButton_Click"/>

                <TextBlock x:Name="ErrorMessageTextBlock"
                           Foreground="White"
                           Background="#D32F2F"
                           Padding="5"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,15,0,0"
                           Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2E3A59" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CreateAdminButton"
                        Content="Create Admin User"
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Background="#2E3A59"
                        Foreground="White"
                        Click="CreateAdminButton_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Padding="10,5"
                        Background="#2E3A59"
                        Foreground="White"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
