<UserControl x:Class="CivilRegistryApp.Modules.Auth.Views.ChangePasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Auth.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Change Password"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Password Fields -->
        <StackPanel Grid.Row="1">
            <!-- Current Password -->
            <TextBlock Text="Current Password:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="CurrentPasswordBox"
                         Padding="5"
                         Margin="0,0,0,15"/>

            <!-- New Password -->
            <TextBlock Text="New Password:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox"
                         Padding="5"
                         Margin="0,0,0,5"/>
            <TextBlock x:Name="PasswordStrengthText"
                       Text="Password strength: Not entered"
                       Margin="0,0,0,15"/>

            <!-- Confirm New Password -->
            <TextBlock Text="Confirm New Password:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Padding="5"
                         Margin="0,0,0,5"/>
            <TextBlock x:Name="PasswordMatchText"
                       Foreground="Red"
                       Visibility="Collapsed"
                       Text="Passwords do not match"
                       Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="ChangeButton"
                    Content="Change Password"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Click="ChangeButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Padding="15,5"
                    Foreground="White"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
