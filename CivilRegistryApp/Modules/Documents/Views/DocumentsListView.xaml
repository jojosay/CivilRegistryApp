<UserControl x:Class="CivilRegistryApp.Modules.Documents.Views.DocumentsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Documents.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Document Management"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   Margin="10,10,10,20"/>

        <!-- Search and Filter Panel -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox x:Name="SearchTextBox"
                     Grid.Column="0"
                     Padding="5"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown">
                <TextBox.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Style.Resources>
                            <VisualBrush x:Key="HintBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search by name, certificate number, or registry office..." Foreground="#757575" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Style.Resources>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HintBrush}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Search Button -->
            <Button x:Name="SearchButton"
                    Grid.Column="1"
                    Content="Search"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="SearchButton_Click"/>

            <!-- Filter Dropdown -->
            <ComboBox x:Name="DocumentTypeComboBox"
                      Grid.Column="2"
                      Width="150"
                      Padding="5"
                      Margin="0,0,10,0"
                      SelectionChanged="DocumentTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="All Documents" IsSelected="True"/>
                <ComboBoxItem Content="Birth Certificate"/>
                <ComboBoxItem Content="Marriage Certificate"/>
                <ComboBoxItem Content="Death Certificate"/>
                <ComboBoxItem Content="CENOMAR"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <!-- Advanced Search Toggle Button -->
            <ToggleButton x:Name="AdvancedSearchToggle"
                    Grid.Column="3"
                    Content="Advanced Search"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="AdvancedSearchToggle_Click"/>

            <!-- Add New Document Button -->
            <Button x:Name="AddDocumentButton"
                    Grid.Column="4"
                    Content="Add Document"
                    Padding="10,5"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="AddDocumentButton_Click"/>
        </Grid>

        <!-- Advanced Search Panel -->
        <Expander x:Name="AdvancedSearchExpander"
                  Grid.Row="2"
                  Margin="10,0,10,10"
                  Header="Advanced Search Options"
                  IsExpanded="False">
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Date of Event Range -->
                <GroupBox Grid.Row="0" Grid.Column="0" Header="Date of Event Range" Margin="0,0,5,10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="From:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" x:Name="EventDateFromPicker" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="To:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="EventDateToPicker" Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Registration Date Range -->
                <GroupBox Grid.Row="0" Grid.Column="1" Header="Registration Date Range" Margin="5,0,5,10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="From:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" x:Name="RegDateFromPicker" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="To:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="RegDateToPicker" Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Upload Date Range -->
                <GroupBox Grid.Row="0" Grid.Column="2" Header="Upload Date Range" Margin="5,0,0,10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="From:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" x:Name="UploadDateFromPicker" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="To:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="UploadDateToPicker" Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Registry Office Filter -->
                <GroupBox Grid.Row="1" Grid.Column="0" Header="Registry Office" Margin="0,0,5,10" Padding="5">
                    <ComboBox x:Name="RegistryOfficeComboBox" Padding="5" SelectionChanged="RegistryOfficeComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Offices" IsSelected="True"/>
                    </ComboBox>
                </GroupBox>

                <!-- Location Filters -->
                <GroupBox Grid.Row="1" Grid.Column="1" Header="Location" Margin="5,0,5,10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Province:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ProvinceComboBox" Margin="0,0,0,5" Padding="5" SelectionChanged="ProvinceComboBox_SelectionChanged">
                            <ComboBoxItem Content="All Provinces" IsSelected="True"/>
                        </ComboBox>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="City/Municipality:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CityComboBox" Margin="0,0,0,5" Padding="5" SelectionChanged="CityComboBox_SelectionChanged">
                            <ComboBoxItem Content="All Cities" IsSelected="True"/>
                        </ComboBox>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Barangay:" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="White"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="BarangayComboBox" Margin="0,0,0,5" Padding="5" SelectionChanged="BarangayComboBox_SelectionChanged">
                            <ComboBoxItem Content="All Barangays" IsSelected="True"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Uploaded By Filter -->
                <GroupBox Grid.Row="1" Grid.Column="2" Header="Uploaded By" Margin="5,0,0,10" Padding="5">
                    <ComboBox x:Name="UploadedByComboBox" Padding="5" SelectionChanged="UploadedByComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Users" IsSelected="True"/>
                    </ComboBox>
                </GroupBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <Button x:Name="ApplyFiltersButton" Content="Apply Filters" Padding="10,5" Margin="0,0,10,0" Background="#2E3A59" Foreground="White" Click="ApplyFiltersButton_Click"/>
                    <Button x:Name="ResetFiltersButton" Content="Reset Filters" Padding="10,5" Background="#2E3A59" Foreground="White" Click="ResetFiltersButton_Click"/>
                </StackPanel>
            </Grid>
        </Expander>

        <!-- Documents List -->
        <DataGrid x:Name="DocumentsDataGrid"
                  Grid.Row="3"
                  Margin="10,0,10,10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="DocumentsDataGrid_SelectionChanged"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  AlternatingRowBackground="{StaticResource PrimaryDarkBrush}"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  RowHeaderWidth="0"
                  HeadersVisibility="Column">
            <DataGrid.Resources>
                <!-- Style for highlighting search matches -->
                <Style x:Key="HighlightedTextBlockStyle" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                            <Setter Property="Background" Value="#FFFFCC" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DocumentId}" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Document Type" Binding="{Binding DocumentType}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Certificate No." Binding="{Binding CertificateNumber}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="ToolTip" Value="Click to copy" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Given Name" Binding="{Binding GivenName}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Middle Name" Binding="{Binding MiddleName}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Family Name" Binding="{Binding FamilyName}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Date of Event" Binding="{Binding DateOfEvent, StringFormat=\{0:MM/dd/yyyy\}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Registry Office" Binding="{Binding RegistryOffice}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Location" Binding="{Binding CityMunicipality}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="ToolTip" Value="{Binding Province}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Uploaded By" Binding="{Binding UploadedByUser.Username}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Uploaded At" Binding="{Binding UploadedAt, StringFormat=\{0:MM/dd/yyyy\}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="View"
                                        Margin="2"
                                        Padding="8,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        ToolTip="View document details"
                                        Click="ViewButton_Click"/>
                                <Button Content="Edit"
                                        Margin="2"
                                        Padding="8,2"
                                        Background="#2E3A59"
                                        Foreground="White"
                                        ToolTip="Edit document"
                                        Click="EditButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button x:Name="PreviousPageButton"
                    Content="Previous"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="PreviousPageButton_Click"/>
            <TextBlock x:Name="PageInfoTextBlock"
                       Text="Page 1 of 1"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="0,0,10,0"/>
            <Button x:Name="NextPageButton"
                    Content="Next"
                    Padding="10,5"
                    Background="#2E3A59"
                    Foreground="White"
                    Click="NextPageButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
