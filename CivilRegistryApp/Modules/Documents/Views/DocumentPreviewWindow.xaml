<Window x:Class="CivilRegistryApp.Modules.Documents.Views.DocumentPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CivilRegistryApp.Modules.Documents.Views"
        mc:Ignorable="d"
        Title="Document Preview" Height="600" Width="800" WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBrush}">
    <Grid Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" x:Name="PreviewTitleTextBlock" Text="Document Preview"
                   FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" Foreground="White"/>

        <!-- Image Preview -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="PreviewImage" Stretch="Uniform" Margin="10"/>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ZoomInButton" Content="Zoom In" Width="90" Padding="5,3" Margin="5" Foreground="White" Background="#2E3A59" Click="ZoomInButton_Click"/>
            <Button x:Name="ZoomOutButton" Content="Zoom Out" Width="90" Padding="5,3" Margin="5" Foreground="White" Background="#2E3A59" Click="ZoomOutButton_Click"/>
            <Button x:Name="RotateButton" Content="Rotate" Width="90" Padding="5,3" Margin="5" Foreground="White" Background="#2E3A59" Click="RotateButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="90" Padding="5,3" Margin="5" Foreground="White" Background="#2E3A59" Click="CloseButton_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
