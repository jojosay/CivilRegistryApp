<UserControl x:Class="CivilRegistryApp.Modules.Documents.Views.DocumentAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CivilRegistryApp.Modules.Documents.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="800"
             Background="{StaticResource PrimaryBrush}">
    <Grid Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Add New Document"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20,20,20,10"
                   Foreground="White"/>

        <!-- Document Add Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <GroupBox Header="Basic Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="DocumentTypeLabel" Grid.Row="0" Grid.Column="0" Text="Document Type:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="DocumentTypeComboBox" Margin="0,0,0,5" Padding="5,3" SelectionChanged="DocumentTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Birth Certificate" IsSelected="True"/>
                                <ComboBoxItem Content="Marriage Certificate"/>
                                <ComboBoxItem Content="Death Certificate"/>
                                <ComboBoxItem Content="CENOMAR"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <TextBlock x:Name="CertificateNumberLabel" Grid.Row="1" Grid.Column="0" Text="Certificate Number:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="CertificateNumberTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="RegistryOfficeLabel" Grid.Row="2" Grid.Column="0" Text="Registry Office:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="RegistryOfficeTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="DateOfEventLabel" Grid.Row="3" Grid.Column="0" Text="Date of Event:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" x:Name="DateOfEventDatePicker" Margin="0,0,0,5"/>

                            <TextBlock x:Name="RegistrationDateLabel" Grid.Row="4" Grid.Column="0" Text="Registration Date:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <DatePicker Grid.Row="4" Grid.Column="1" x:Name="RegistrationDateDatePicker" Margin="0,0,0,5"/>

                            <TextBlock x:Name="GenderLabel" Grid.Row="5" Grid.Column="0" Text="Gender:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="5" Grid.Column="1" x:Name="GenderComboBox" Margin="0,0,0,5" Padding="5,3">
                                <ComboBoxItem Content="M" IsSelected="True"/>
                                <ComboBoxItem Content="F"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <!-- Person Information - Common for all document types except Marriage Certificate -->
                    <GroupBox x:Name="PersonInformationGroupBox" Header="Person Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="PrefixLabel" Grid.Row="0" Grid.Column="0" Text="Prefix:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="PrefixTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="GivenNameLabel" Grid.Row="1" Grid.Column="0" Text="Given Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="GivenNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="MiddleNameLabel" Grid.Row="2" Grid.Column="0" Text="Middle Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="MiddleNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="FamilyNameLabel" Grid.Row="3" Grid.Column="0" Text="Family Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="FamilyNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="SuffixLabel" Grid.Row="4" Grid.Column="0" Text="Suffix:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="SuffixTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>

                    <!-- Birth Certificate Fields -->
                    <GroupBox x:Name="BirthCertificateFieldsGroup" Header="Birth Certificate Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="BirthWeightLabel" Grid.Row="0" Grid.Column="0" Text="Birth Weight (kg):" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="BirthWeightTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="BirthOrderLabel" Grid.Row="1" Grid.Column="0" Text="Birth Order:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="BirthOrderTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="TypeOfBirthLabel" Grid.Row="2" Grid.Column="0" Text="Type of Birth:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="TypeOfBirthComboBox" Margin="0,0,0,5" Padding="5,3">
                                <ComboBoxItem Content="Single" IsSelected="True"/>
                                <ComboBoxItem Content="Twin"/>
                                <ComboBoxItem Content="Triplet"/>
                                <ComboBoxItem Content="Quadruplet"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <!-- Marriage Certificate Fields -->
                    <GroupBox x:Name="MarriageCertificateFieldsGroup" Header="Marriage Certificate Information" Margin="0,0,0,10" Padding="10" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Husband Information -->
                            <TextBlock x:Name="HusbandGivenNameLabel" Grid.Row="0" Grid.Column="0" Text="Husband Given Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="HusbandGivenNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="HusbandMiddleNameLabel" Grid.Row="1" Grid.Column="0" Text="Husband Middle Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="HusbandMiddleNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="HusbandFamilyNameLabel" Grid.Row="2" Grid.Column="0" Text="Husband Family Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="HusbandFamilyNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <!-- Wife Information -->
                            <TextBlock x:Name="WifeGivenNameLabel" Grid.Row="3" Grid.Column="0" Text="Wife Given Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="WifeGivenNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="WifeMiddleNameLabel" Grid.Row="4" Grid.Column="0" Text="Wife Middle Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="WifeMiddleNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="WifeFamilyNameLabel" Grid.Row="5" Grid.Column="0" Text="Wife Family Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="WifeFamilyNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <!-- Marriage Details -->
                            <TextBlock x:Name="MarriageDateLabel" Grid.Row="6" Grid.Column="0" Text="Marriage Date:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <DatePicker Grid.Row="6" Grid.Column="1" x:Name="MarriageDatePicker" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="MarriageTypeLabel" Grid.Row="7" Grid.Column="0" Text="Marriage Type:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="7" Grid.Column="1" x:Name="MarriageTypeComboBox" Margin="0,0,0,5" Padding="5,3">
                                <ComboBoxItem Content="Civil" IsSelected="True"/>
                                <ComboBoxItem Content="Religious"/>
                                <ComboBoxItem Content="Tribal/Customary"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <!-- Death Certificate Fields -->
                    <GroupBox x:Name="DeathCertificateFieldsGroup" Header="Death Certificate Information" Margin="0,0,0,10" Padding="10" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="CauseOfDeathLabel" Grid.Row="0" Grid.Column="0" Text="Cause of Death:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="CauseOfDeathTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="AgeAtDeathLabel" Grid.Row="1" Grid.Column="0" Text="Age at Death:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="AgeAtDeathTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="PlaceOfDeathLabel" Grid.Row="2" Grid.Column="0" Text="Place of Death:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="PlaceOfDeathTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>

                    <!-- Other Document Type Fields -->
                    <GroupBox x:Name="OtherDocumentFieldsGroup" Header="Document Information" Margin="0,0,0,10" Padding="10" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="DocumentPurposeLabel" Grid.Row="0" Grid.Column="0" Text="Document Purpose:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="DocumentPurposeTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="DocumentCategoryLabel" Grid.Row="1" Grid.Column="0" Text="Document Category:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="DocumentCategoryTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>

                    <!-- Parents Information - Common for all document types -->
                    <GroupBox Header="Parents Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="FatherGivenNameLabel" Grid.Row="0" Grid.Column="0" Text="Father's Given Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="FatherGivenNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="FatherMiddleNameLabel" Grid.Row="1" Grid.Column="0" Text="Father's Middle Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="FatherMiddleNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="FatherFamilyNameLabel" Grid.Row="2" Grid.Column="0" Text="Father's Family Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="FatherFamilyNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="MotherMaidenGivenLabel" Grid.Row="3" Grid.Column="0" Text="Mother's Maiden Given:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="MotherMaidenGivenTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="MotherMaidenMiddleNameLabel" Grid.Row="4" Grid.Column="0" Text="Mother's Maiden Middle:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="MotherMaidenMiddleNameTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="MotherMaidenFamilyLabel" Grid.Row="5" Grid.Column="0" Text="Mother's Maiden Family:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="MotherMaidenFamilyTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <GroupBox Header="Location Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="BarangayLabel" Grid.Row="0" Grid.Column="0" Text="Barangay:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="BarangayTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="CityMunicipalityLabel" Grid.Row="1" Grid.Column="0" Text="City/Municipality:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="CityMunicipalityTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="ProvinceLabel" Grid.Row="2" Grid.Column="0" Text="Province:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ProvinceTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Registry Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="RegistryBookLabel" Grid.Row="0" Grid.Column="0" Text="Registry Book:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="RegistryBookTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="VolumeNumberLabel" Grid.Row="1" Grid.Column="0" Text="Volume Number:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="VolumeNumberTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="PageNumberLabel" Grid.Row="2" Grid.Column="0" Text="Page Number:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="PageNumberTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="LineNumberLabel" Grid.Row="3" Grid.Column="0" Text="Line Number:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="LineNumberTextBox" Margin="0,0,0,5" Padding="5,3"/>

                            <TextBlock x:Name="AttendantNameLabel" Grid.Row="4" Grid.Column="0" Text="Attendant Name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="AttendantNameTextBox" Margin="0,0,0,5" Padding="5,3"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Additional Information" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="RemarksLabel" Grid.Row="0" Grid.Column="0" Text="Remarks:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="RemarksTextBox" Margin="0,0,0,5" Padding="5,3" TextWrapping="Wrap" AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Document Files" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Front side file (Required) -->
                            <TextBlock x:Name="FrontSideLabel" Grid.Row="0" Grid.Column="0" Text="Front Side (Required):" FontWeight="Bold" Margin="0,0,10,10" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="FrontFilePathTextBox" IsReadOnly="True" Margin="0,0,10,10" Padding="5,3"/>
                            <Button Grid.Row="0" Grid.Column="2" x:Name="BrowseFrontButton" Content="Browse" Foreground="White" Background="#2E3A59" Padding="10,3" Margin="0,0,10,10" Click="BrowseFrontButton_Click"/>
                            <Button Grid.Row="0" Grid.Column="3" x:Name="PreviewFrontButton" Content="Preview" Foreground="White" Background="#2E3A59" Padding="10,3" Margin="0,0,0,10" Click="PreviewFrontButton_Click" IsEnabled="False"/>

                            <!-- Back side file -->
                            <TextBlock x:Name="BackSideLabel" Grid.Row="1" Grid.Column="0" Text="Back Side:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="BackFilePathTextBox" IsReadOnly="True" Margin="0,0,10,5" Padding="5,3"/>
                            <Button Grid.Row="1" Grid.Column="2" x:Name="BrowseBackButton" Content="Browse" Foreground="White" Background="#2E3A59" Padding="10,3" Margin="0,0,10,5" Click="BrowseBackButton_Click"/>
                            <Button Grid.Row="1" Grid.Column="3" x:Name="PreviewBackButton" Content="Preview" Foreground="White" Background="#2E3A59" Padding="10,3" Click="PreviewBackButton_Click" IsEnabled="False"/>

                            <!-- Note about file types -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Text="Supported file types: PDF, JPG, JPEG, PNG, TIFF" FontStyle="Italic" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="20,10,20,20">
            <Button x:Name="SaveButton"
                    Content="Save Document"
                    Padding="20,5"
                    Margin="0,0,10,0"
                    Foreground="White"
                    Background="#4CAF50"
                    Click="SaveButton_Click"/>

            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Padding="20,5"
                    Foreground="White"
                    Background="#2E3A59"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
